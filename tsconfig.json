{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "useDefineForClassFields": true,
    "allowJs": true,        // Allow JavaScript files
    "checkJs": false,       // Optional: Skip type-checking JavaScript
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
